@model Dive
<h3>@Model.Name Information</h3>
<table class="table">
    <tr>
        <th>Dive No.</th>
        <th>Name</th>
        <th> Tuck (C)</th>
        <th>Pike (B)</th>
        <th>Straight (A)</th>
        <th>Free (D)</th>
        <th>Notes</th>
    </tr>
            <tr>
            <td>@Model.DiveNo</td>
            <td>@Model.Name</td>
             <td><a style="color: black"href="@Model.CLink">@Model.CTuck</a></td>
            <td><a style="color: black" href="@Model.BLink">@Model.BPike</a></td>
            <td><a style="color: black" href="@Model.ALink">@Model.AStraight</a></td>
            <td><a style="color: black"  href="@Model.DLink">@Model.DFree</a></td>
            <td>@Model.Notes</td>
        </tr>
    
</table>
<div>
    <form action="/Dive/UpdateNotes/@Model.DiveNo">
        <input type="submit" value="Update notes for this dive" class="button"/>
        </form>
</div>
<p></p>
<div style="display: block">

    @using (Html.BeginForm("DeleteDive", "Dive", "Post"))
    {
        <input type="hidden" asp-for="DiveNo" value="@Model.DiveNo" />
        <input type="submit" onclick="return confirm('Are you sure you want to delete this dive? Any notes will also be deleted.')" value="Delete this dive" class="button" />
    }
</div>